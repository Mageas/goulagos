#!/usr/bin/env bash

doas sed -i -e "s/GRUB_GFXMODE=auto/GRUB_GFXMODE=2560x1440,1920x1080,auto/g" /etc/default/grub \
    || ERROR "[config.install_custom_grub]: Unable to update the grub resolution"

git clone https://github.com/vinceliuice/grub2-themes "${INSTALL_DIRECTORY}/grub2-themes" \
    && cd "${INSTALL_DIRECTORY}/grub2-themes" && doas ./install.sh --boot --theme tela 1> /dev/null \
    || ERROR "[config.install_custom_grub]: Unable to install the custom grub"
